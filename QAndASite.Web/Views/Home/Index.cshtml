@model IndexVM

@foreach (var question in Model.Questions)
{
    <div class="col-md-8 offset-md-2" style="margin-top:100px">
        <div class="card card-body bg-light">
            <h4>
                <a href="/question/viewquestion?questionid=@question.Id">
                    @question.Title
                </a>
            </h4>
            <div>
                <span>Tags:</span>
                @foreach (var tag in question.QuestionsTags)
                {
                    <span class="badge bg-primary">@tag.Tag</span>
                }

            </div>
            <div style="margin-top: 10px;">
                @question.Text
            </div>
            <span>Likes: @question.Likes</span>
            <br>
            <span>@question.Answers.Count() answer(s)</span>
        </div>
    </div>
}
